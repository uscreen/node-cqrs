{
  "name": "@uscreen.de/cqrs-kit",
  "version": "0.34.4",
  "description": "CQRS Starter Kit to start fast into DDD. Eventsourcing included. Some soldering required.",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com:uscreen/node-cqrs.git"
  },
  "author": "Marcus Spiegel <spiegel@uscreen.de>",
  "contributors": [
    "@stas_natalenko"
  ],
  "files": [
    "src"
  ],
  "license": "MIT",
  "keywords": [
    "cqrs",
    "ddd",
    "eventsourcing"
  ],
  "engines": {
    "node": ">=8.x"
  },
  "scripts": {
    "lint": "eslint '**/*.js' --fix",
    "test": "tap test/**/*.test.js",
    "test:cov": "tap --coverage-report=html test/**/*.test.js",
    "test:ci": "tap --coverage-report=text-summary test/**/*.test.js",
    "snyk-protect": "snyk protect",
    "prepare": "yarn run snyk-protect"
  },
  "gitHooks": {
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.{js}": [
      "eslint --fix",
      "git add"
    ]
  },
  "dependencies": {
    "assert-plus": "^1.0.0",
    "lock": "^1.1.0",
    "nats": "^1.4.12",
    "redis-lock": "^0.1.4",
    "rfdc": "^1.1.4",
    "snyk": "^1.419.1",
    "uuid": "^8.3.1"
  },
  "devDependencies": {
    "env-schema": "^1.1.0",
    "eslint": "^7.11.0",
    "eslint-config-prettier": "^6.14.0",
    "eslint-config-standard": "^14.1.1",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.1.3",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.2",
    "ioredis": "^4.16.3",
    "lint-staged": "^10.4.2",
    "mongodb": "^3.6.2",
    "prettier": "^2.1.2",
    "tap": "^14.10.8",
    "yorkie": "^2.0.0"
  },
  "snyk": true
}
